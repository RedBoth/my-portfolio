<button
  id="to-top-btn"
  aria-label="Volver al inicio"
  class="fixed bottom-8 right-8 z-40 p-3 rounded-full bg-brand-secondary/80 text-brand-yellow border border-white/10 shadow-[0_0_20px_rgba(0,0,0,0.5)] backdrop-blur-md translate-y-24 opacity-0 transition-all duration-500 hover:scale-110 hover:bg-brand-yellow hover:text-brand-dark hover:shadow-[0_0_30px_rgba(255,215,0,0.4)] cursor-pointer"
>
  <svg 
    xmlns="http://www.w3.org/2000/svg" 
    class="size-6" 
    fill="none" 
    viewBox="0 0 24 24" 
    stroke="currentColor" 
    stroke-width="2.5"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
  </svg>
</button>

<script>
  const btn = document.getElementById('to-top-btn');

  if (btn) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        btn.classList.remove('translate-y-24', 'opacity-0');
        btn.classList.add('translate-y-0', 'opacity-100');
      } else {
        btn.classList.add('translate-y-24', 'opacity-0');
        btn.classList.remove('translate-y-0', 'opacity-100');
      }
    });

    btn.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }
</script>